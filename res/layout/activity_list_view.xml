<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ale.learning.ListViewActivity" >

    <Button
        android:id="@+id/btnlistviewSimple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/listview_simple" />

    <Button
        android:id="@+id/btnlistviewHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/listview_header" />

    <Button
        android:id="@+id/btnlistviewBaseAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/listview_baseadapter" />
</LinearLayout>